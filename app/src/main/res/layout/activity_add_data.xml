<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".addData">

    <EditText
        android:id="@+id/edit_nameofmed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingLeft="20dp"
        android:inputType="textPersonName"
        android:textSize="30dp"
        android:layout_marginTop="60dp"
        android:hint="Name Of Medicine" />

    <EditText
        android:id="@+id/edit_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:hint="Date"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:id="@+id/edit_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:inputType="time"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:hint="hour"/>
    <EditText
        android:id="@+id/edit_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:inputType="time"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:hint="minute"/>
    <EditText
        android:id="@+id/edit_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:inputType="time"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:hint="second"/>
</LinearLayout>
    <EditText
        android:id="@+id/edit_numoftaken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:hint="num of taken"/>

    <TextView
        android:id="@+id/textshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/buttontaketime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="taketime"
        android:text="taketime"
        />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:background="#08AE9E"
        android:textColor="#fff"
        android:onClick="add_Data"
        android:layout_marginTop="70dp"
        android:text="add" />
</LinearLayout>